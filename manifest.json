{
  "manifest_version": 3,
  "name": "Autonomous Web Agent",
  "version": "2.0",
  "description": "AI-powered autonomous web agent with Observe -> Decide -> Act -> Verify workflow",
  
  "permissions": [
    "activeTab",
    "sidePanel",
    "scripting",
    "storage",
    "tts",
    "tabs"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "web-automation.js",
        "content-script.js"
      ],
      "css": ["content-styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "side_panel": {
    "default_path": "sidebar.html"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Autonomous Web Agent"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "web-agent.js",
        "gemini-service.js", 
        "dom-analyzer.js",
        "error-handler.js",
        "user-interaction.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}