{
  "manifest_version": 3,
  "name": "Voice Web Assistant",
  "version": "1.0",
  "description": "Voice-controlled web assistant for visually impaired users",
  
  "permissions": [
    "activeTab",
    "sidePanel",
    "scripting",
    "storage",
    "tts"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["content-styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "side_panel": {
    "default_path": "sidebar.html"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Voice Web Assistant"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}